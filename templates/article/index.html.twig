{% extends 'baseAdmin.html.twig' %}

{% block title %}Mes articles{% endblock %}

{% block body %}

<div class="Admin">

    <h2 class="Admin-title">Mes articles</h2>

        <table>
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Date de création</th>
                    <th colspan="3">Actions</th>
                </tr>
            </thead>
            <tbody>

                {% for article in articles %}

                    <tr id="Admin-Article-{{ article.id }}">
                        <td>{{ article.title }}</td>
                        <td>{{ article.description }}</td>
                        <td>{{ article.createdAt|date('Y/m/d à H:i') }}</td>
                        <td><a class="Admin-show" href="{{ path('app_article_show', {'slug': article.slug}) }}">Voir</a></td>
                        <td><a class="Admin-modify" href="{{ path('app_article_edit', {'slug': article.slug}) }}">Modifier</a></td>
                        <td>{% include 'article/_delete_form.html.twig' %}</td>
                    </tr>

                {% endfor %}

            </tbody>
        </table>

</div>

{% endblock %}

{% block javascripts %}

    <script type="module" src="{{ asset('js/modules/DeleteArticleManager.js') }}"></script>
{% endblock %}