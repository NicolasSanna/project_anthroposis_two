{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}

<div class="Page">

    <h2 class="Page-title">Articles</h2>
    <div class="Page-articles">

        {% for article in articles %}

            <div class="Page-articles-article">
                <p class="Page-articles-article-author">{{ article.user.pseudo }}</p>
                <p class="Page-articles-article-date">{{ article.createdAt|date('d/m/Y Ã  H:i') }}</p>
                <h3 class="Page-articles-article-title"><a  class="Page-articles-article-link" href="{{ path('app_articles_article_show', {'slug': article.slug}) }}">{{ article.title }}</a></h3>
                <p class="Page-articles-article-description">{{ article.description }}</p>
                <hr class="Page-articles-article-hr">
            </div>

        {% endfor %}

    </div>
</div>

{% endblock %}
