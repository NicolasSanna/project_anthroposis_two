{% extends 'baseAdmin.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}

<div class="Admin">
    <h2 class="Admin-title">Catégories</h2>
    <table>
        <thead>
            <tr>
                <th>Catégorie</th>
                <th colspan="3">Actions</th>
            </tr>
        </thead>
        <tbody>

            {% for category in categories %}

                <tr id="Admin-Category-{{ category.id }}">
                    <td>{{ category.label }}</td>
                    <td><a class="Admin-modify" href="{{ path('app_category_edit', {'slug': category.slug}) }}">Modifier</a></td>
                    <td>{% include 'admin/category/_delete_form.html.twig' %}</td>
                </tr>
            
            {% endfor %}

        </tbody>
    </table>
</div>

{% endblock %}

{% block javascripts %}

    {{ parent() }}
    <script type="module" src="{{ asset('js/modules/DeleteCategoryManager.js') }}"></script>

{% endblock %}