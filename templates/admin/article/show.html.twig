{% extends 'baseAdmin.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}

<article class="Article">
    <p class="Article-author">{{ article.user.pseudo }} - {{ article.createdAt|date('d/mY à H:i') }}</p>
    <p class="Article-author">Mis à jour le {{  article.updatedAt|date('d/mY à H:i') }}</p>
    <p class="Article-title">{{ article.title }}</p>
    <p class="Article-description">{{ article.description }}</p>

        <div class="Article-boxImg">
            <img class="Article-boxImg-img" src="{{ asset('image_directory/' ~ article.image ~ '') }} " alt="">
        </div>

    <p class="Article-content">{{ article.content }}</p>

    <hr class="Article-hr">

    {% if is_granted('ROLE_ADMIN') and app.user %}
        <a class="Article-button" href="{{ path('app_article_verify_check', {'slug': article.slug}) }}">Valider</a>
    {% endif %}

</article>

{% endblock %}