{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur Anthroposis II{% endblock %}

{% block body %}

<div class="Page">

    <h2 class="Page-title">Rechercher un article</h2>
    
    {% include 'home/_form_search.html.twig' %}

    <div class="Page-articles">

        {% for article in articles %}

            <div class="Page-articles-article">
                <p class="Page-articles-article-author">{{ article.pseudo }}</p>
                <p class="Page-articles-article-date">{{ article.created_at_fr }}</p>
                <h3 
                    class="Page-articles-article-title"
                >
                    <a 
                        class="Page-articles-article-link" 
                        href="{{ path('app_articles_article_show', {'slug': article.slug}) }}">
                        {{ article.title }}
                    </a>
                </h3>
                <p class="Page-articles-article-description">{{ article.description }}</p>
                <hr>
            </div>

        {% endfor %}

    </div>
</div>

{% endblock %}