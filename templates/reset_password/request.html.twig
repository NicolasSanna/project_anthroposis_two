{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}

    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="Message Error-message" role="alert">{{ flash_error }}</div>
    {% endfor %}

<div class="Account">
    <h2 class="Account-title">Réinitialiser le mot de passe</h2>

    {{ form_start(requestForm, {'attr': {'class': 'Form'}}) }}
        {{ form_row(requestForm.email) }}

        <div>
            <small>
                Entrez votre adresse e-mail et nous vous enverrons un
                lien pour réinitialiser votre mot de passe.
            </small>
        </div>

        <button class="Form-button">Envoyer un email de réinitialisation</button>
    {{ form_end(requestForm) }}

</div>

{% endblock %}
